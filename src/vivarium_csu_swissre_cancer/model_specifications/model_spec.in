components:
    vivarium_public_health:
        population:
            - BasePopulation()
            - Mortality()

    vivarium_csu_swissre_cancer.components:
        - BreastCancer()
        - MortalityObserver()
        - DisabilityObserver()
        - DiseaseObserver('breast_cancer')

configuration:
    input_data:
        location: {{ location_proper }}
        input_draw_number: 0
        artifact_path: /share/costeffectiveness/artifacts/vivarium_csu_swissre_cancer/{{ location_sanitized }}.hdf
    interpolation:
        order: 0
        # TODO change to False once we have data for all dates
        extrapolate: True
    randomness:
        map_size: 1_000_000
        key_columns: ['entrance_time', 'age']
        random_seed: 0
    time:
        start:
            year: 2020
            month: 1
            day: 1
        end:
            year: 2039
            month: 12
            day: 31
        step_size: 30 # Days
    population:
        population_size: 100000
        age_start: 15
        age_end: 95

    metrics:
        disability:
            by_age: False
            by_sex: True
            by_year: True
        mortality:
            by_age: False
            by_sex: True
            by_year: True
        breast_cancer_observer:
            by_age: False
            by_sex: True
            by_year: True
